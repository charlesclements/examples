package net.charlesclements.util.text{	//import com.bedrock.framework.plugin.util.TimeUtil;	public class TextUtil()		{		}				/*		Returns a Rectangle Object with the measurements of the text. This function accounts for linebreaks.		*/		public static function measureStringInTextfield(str:String, font:String="Times New Roman", size:Number=12):Rectangle 		{					    var textField:TextField = new TextField();			textField.defaultTextFormat = new TextFormat( font, size );			textField.border = true;			textField.multiline = true;			textField.autoSize = TextFieldAutoSize.LEFT;			textField.htmlText = str;			// Grab with and height before nullifying Textfield.			var w:Number = textField.textWidth;			var h:Number = textField.textHeight;			//addChild( textField );// This will add the Textfield to the stage so you can visibly see it.			//if( contains( textField ) ) removeChild( textField );// If it exists onstage, remove it.			textField = null;//nullify it to make it avaiiable for garbage collection.		    return new Rectangle(0, 0, w, h);					}					}}