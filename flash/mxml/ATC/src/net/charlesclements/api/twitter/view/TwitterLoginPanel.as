package net.charlesclements.api.twitter.view{	import com.bedrock.framework.plugin.util.ButtonUtil;		import fl.controls.Button;	import fl.controls.CheckBox;		import flash.display.MovieClip;	import flash.events.Event;	import flash.events.FocusEvent;	import flash.events.MouseEvent;	import flash.text.TextField;	import flash.text.TextFieldType;		//import 		public class TwitterLoginPanel extends MovieClip	{				public var code:TextField;		private var code_txt:String = "Enter Code";		public var username:TextField;		private var username_txt:String = "Search User";;		public var logout:Button;		public var submit:Button;		public var auth:Button;		public var search:Button;		public var close:Button;		public var fullscreen:Button;		public var exitApp:Button;		public var remember:CheckBox;		//public var searchDefault:CheckBox;		public var defaultSearch:String = "";						public function TwitterLoginPanel()		{						code.addEventListener( FocusEvent.FOCUS_IN, onFocusEvent );			code.addEventListener( FocusEvent.FOCUS_OUT, onFocusEvent );						username.addEventListener( FocusEvent.FOCUS_IN, onFocusEvent );			username.addEventListener( FocusEvent.FOCUS_OUT, onFocusEvent );						code.text = code_txt;			username.text = username_txt;						/*			searchDefault.addEventListener( Event.CHANGE, onSearchCheck );			onSearchCheck();			*/					}						private function onFocusEvent($e:FocusEvent):void		{						//trace("onFocusEvent")						switch( $e.type )			{								case FocusEvent.FOCUS_IN:					if( $e.currentTarget.name == "code" && code.text == code_txt ) code.text = "";					if( $e.currentTarget.name == "username" && username.text == username_txt ) username.text = "";					break;								case FocusEvent.FOCUS_OUT:										if( $e.currentTarget.name == "code" && code.text == "" ) code.text = code_txt;					if( $e.currentTarget.name == "username" && username.text == "" ) username.text = defaultSearch;					break;							}					}			}}