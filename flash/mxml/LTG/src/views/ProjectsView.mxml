<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" title="Projects" creationComplete="init()" xmlns:components="components.*">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			
			public function init():void
			{
				
				trace("ProjectsView - init");
				projects.visible = true;
				projectCreator.visible = false;
				projects.addEventListener( "createNewProject", createNewProject );
				
			}
			
			protected function createNewProject(e:Event):void
			{
				
				trace("createNewProject");
				projects.visible = false;
				projectCreator.visible = true;
				
			}
			
			protected function closeProject():void
			{
				
				trace("closeProject");
				projectCreator.visible = false;
				projects.visible = true;
				
			}
			
			
		]]>
	</fx:Script>
	
	<components:Projects id="projects" width="100%" height="100%"/>
	<components:ProjectCreator id="projectCreator" width="100%" height="100%"/>
	
</s:View>
