<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
					  xmlns:s="library://ns.adobe.com/flex/spark"
					  initialize="init()" xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	
	
	<fx:Script>
		<![CDATA[
			
			
			public static var isCreated:Boolean = false;
			
			
			public function init():void
			{
				
				if( !isCreated )
				{
					
					trace("AudioPlayer - init");
					update();
				}
				
			}
			
			
			public function update():void
			{
				
				trace("AudioPlayer : update");
				width = this.parent.width;
				
			}
			
			
		]]>
	</fx:Script>
	
	<s:HGroup verticalAlign="middle" horizontalAlign="center" paddingLeft="5" paddingRight="5" width="100%">
		<s:Label text="Music"/>
		<s:ToggleButton id="loopButton" label="Loop" height="30"/>
		<s:Button id="playButton" label="Play" height="30"/>		
		<s:Button id="stopButton" label="Stop" height="30"/>		
		<s:HSlider id="musicSlider" maximum="100" width="100%"/>
	</s:HGroup>
	
</s:Group>
