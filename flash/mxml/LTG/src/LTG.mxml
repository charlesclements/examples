<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
								  xmlns:s="library://ns.adobe.com/flex/spark" 
								  applicationDPI="160" xmlns:components="components.*"
								  activate="init()">
	

	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	
	<fx:Script>
		<![CDATA[
			
			private static var app:LTG;
			
			protected function init():void
			{
				
				trace("initialize");
				projectCreator.visible = false;
				projectsView.addEventListener( "onCreateProject", createProject );
				projectCreator.addEventListener( "onCloseProject", closeProject );
				
			}
			
			protected function createProject(e:Event=null):void
			{
				
				trace("createProject");
				projectCreator.visible = true;
				tabNav.visible = false;
				
			}
			
			protected function closeProject(e:Event=null):void
			{
				
				trace("closeProject");
				projectCreator.visible = false;
				projectCreator.clear();
				tabNav.visible = true;
				
			}
			
		]]>
	</fx:Script>
	
	
	
	<components:ProjectCreator id="projectCreator"/>
	
	<s:TabbedViewNavigator id="tabNav" width="100%" height="100%" >
		<s:ViewNavigator label="Projects" id="projectsView" width="100%" height="100%" firstView="views.ProjectsView"/>
		<!-- <s:ViewNavigator label="Create" width="100%" height="100%" firstView="views.CreateView"/>
		<s:ViewNavigator label="Stream" width="100%" height="100%" firstView="views.StreamView"/>
		<s:ViewNavigator label="Network" width="100%" height="100%" firstView="views.NetworkView"/> -->
		<s:ViewNavigator label="Profile" width="100%" height="100%" firstView="views.ProfileView"/>
	</s:TabbedViewNavigator>
		
</s:Application>
