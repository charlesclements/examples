package com.imt.framework.display.dialogue{	import com.bedrock.framework.core.dispatcher.BedrockDispatcher;	import com.greensock.TweenMax;	import com.imt.framework.core.event.SiteEvent;		import flash.display.MovieClip;	import flash.display.Sprite;
		public class AbstractDialogue extends MovieClip	{				public var t:TweenMax;		public var eventComplete:String = ""				public function AbstractDialogue()		{			super();						t = new TweenMax({},0,{});					}						public function stopTimer():AbstractDialogue		{						t.kill();			return this;					}						public function timed($seconds:Number):AbstractDialogue		{						//trace(this + " : timed : " + $seconds)			t.kill();			t = TweenMax.delayedCall( $seconds, timedComplete );						return this;					}						private function timedComplete():void		{						BedrockDispatcher.dispatchEvent( new SiteEvent( SiteEvent.TIMER_COMPLETE, this, {} ) );					}						public function close():AbstractDialogue		{						BedrockDispatcher.dispatchEvent( new SiteEvent( SiteEvent.CLOSE_WINDOW, this, {} ) );						return this;					}			}}