package com.imt.framework.display.button{	import com.bedrock.framework.core.dispatcher.BedrockDispatcher;	import com.bedrock.framework.plugin.util.ButtonUtil;	import com.greensock.TweenMax;	import com.imt.framework.core.event.GenericEvent;	import com.imt.framework.core.event.SiteEvent;	import com.imt.games.neo.memory_plane.Settings;		import flash.display.MovieClip;	import flash.display.Sprite;	import flash.events.MouseEvent;
		public class AbstractGameButton extends MovieClip	{				public var t:TweenMax;		public var clicked:Boolean = false;		public var index:uint;		static public var BUTTON_DIALOGUE_DELAY:Number = 0.4;							public function AbstractGameButton()		{			super();												t = new TweenMax({},0,{});									//ButtonUtil.addListeners( this, { down:startTimer } );					}						// Automatically starts timer when instance is clicked.		public function startTimer():void		{						t.kill();			t = TweenMax.delayedCall( AbstractGameButton.BUTTON_DIALOGUE_DELAY, timedComplete );					}						internal function stopTimer():AbstractGameButton		{						t.kill();			return this;					}						internal function timedComplete():void		{						dispatchEvent( new SiteEvent( SiteEvent.TIMER_COMPLETE, this, {} ) );					}						private function resetButton():void		{						trace(this + " : resetButton")											}			}}