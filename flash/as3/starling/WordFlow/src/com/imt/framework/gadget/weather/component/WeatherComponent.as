package com.imt.framework.gadget.weather.component{		import com.bedrock.framework.plugin.view.MovieClipView;	import com.imt.framework.icon.WeatherIcon;		import flash.display.Bitmap;	import flash.display.BitmapData;	import flash.display.MovieClip;	import flash.display.Sprite;	import flash.text.TextField;		//import hype.framework.display.BitmapCanvas;		public class WeatherComponent extends MovieClipView	{						public var content:MovieClip;		private var _canvas:Bitmap;						// Constructor.		public function WeatherComponent()		{			super();			content.visible = false;						// Create Bitmap instance for smoothness.			_canvas = new Bitmap( new BitmapData( width, height, true, 0x0000ff ), "auto", true );			//_canvas.x = _canvas.y = 10;			addChild( _canvas );						// Redraw bitmap.			update();					}						// Update Bitmap.		public function update():WeatherComponent		{						_canvas.bitmapData.dispose();			_canvas.bitmapData = new BitmapData( width, height, true, 0x0000ff );						// Take snapshot.			_canvas.bitmapData.draw( content );						return this;					}				// changes day of week.		public function set dayOfWeek($info:String):void		{						content["dayOfWeek"].text = $info;						// Redraw bitmap.			update();					}		public function get dayOfWeek():String		{						return content["dayOfWeek"].text;					}						// changes conditions.		public function set condition($info:String):void		{						content["condition"].text = $info;						// Redraw bitmap.			update();					}		public function get condition():String		{						return content["condition"].text;					}						// Icon stuff		public function set icon($o:WeatherIcon):void		{						var g:MovieClipView = content["gr"] as MovieClipView;						// Cancel out children.			var arr:Array = g.children;			g.removeChildren();			for( var i:uint = 0; i < arr.length; i++ )			{				arr[ i ] = null;			}						// Add icon.			$o.name = "icon";			g.addChild( $o );						// Redraw bitmap.			update();					}		public function get icon():WeatherIcon		{						return ( content["gr"] as MovieClipView ).getChildByName( "icon" ) as WeatherIcon;					}			}	}