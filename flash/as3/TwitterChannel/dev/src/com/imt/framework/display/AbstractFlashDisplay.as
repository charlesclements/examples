package com.imt.framework.display{			import com.greensock.TweenMax;	import com.imt.framework.core.dispatcher.FlashDispatcher;	import com.imt.framework.core.event.SiteEvent;		import flash.display.Sprite;
		public class AbstractFlashDisplay extends Sprite	{				public var t:TweenMax;		public var eventComplete:String = "";		public var initialized:Boolean = false;				public function AbstractFlashDisplay()		{						super();			t = new TweenMax({},0,{});					}						public function stopTimer():AbstractFlashDisplay		{						t.kill();			return this;					}						public function timed($seconds:Number):AbstractFlashDisplay		{						//trace(this + " : timed : " + $seconds)			t.kill();			t = TweenMax.delayedCall( $seconds, timedComplete );			return this;					}						private function timedComplete():void		{						//GlobalDispatcher.dispatchEvent( new SiteEvent( SiteEvent.TIMER_COMPLETE, this, {} ) );			FlashDispatcher.dispatchEvent( new SiteEvent( SiteEvent.TIMER_COMPLETE ) );					}						public function close():AbstractFlashDisplay		{						//GlobalDispatcher.dispatchEvent( new SiteEvent( SiteEvent.CLOSE_WINDOW, this, {} ) );			FlashDispatcher.dispatchEvent( new SiteEvent( SiteEvent.CLOSE_WINDOW ) );			return this;					}			}}