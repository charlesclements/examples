package net.charlesclements.gadgets.time{	import com.bedrock.framework.plugin.util.TimeUtil;	public class TimeGadget	{		public function TimeGadget()		{		}				public function timestamp():String		{						// New Date object.			var d:Date = new Date();						// This is giving me a day more than what it actuall is, might be buggy.			return String( d.fullYear ) + doDateFormat( d.month + 1 ) + doDateFormat( Number( d.getUTCDate() ) ) + doDateFormat( d.hours ) + doDateFormat( d.minutes )// + doDateFormat( d.seconds );		}				// Adds a zero to the beginning if the numer is a single digit.		private function doDateFormat(n:*):String { return ( String( n ).length < 2) ? "0" + String( n ) : String( n ) };				// Returns civilian time including AM / PM distinguishing.		static public function getFormattedTime($data:Object=null):String		{						var d:Date = new Date;			var h:String = String( ( d.hours >= 13 ) ? d.hours - 12 : d.hours );			var t:String = h + ":" + TimeUtil.getDisplayMinutes( d.minutes ) + ":" + TimeUtil.getDisplaySeconds( d.seconds ) + " " + ( ( $data.ampm ) ? TimeGadget.getAmPm() : "" );						return t;					}						// Returns civilian time including AM / PM distinguishing.		static public function getAmPm():String		{						var d:Date = new Date;			return String( ( d.hours >= 12 ) ? "pm" : "am" );					}			}}