package objects{			import com.greensock.TimelineMax;	import com.greensock.TweenMax;	import flash.display.Sprite;	import flash.media.Sound;		public class SoundBar extends Sprite	{						// Vars.		private var _total:uint = 17;		public var timeline:TimelineMax;		private var _clips:Array = [];		private var _spacing:uint = 14;		public static var ANIMATION_SCALE:String = "SoundBar.ANIMATION_SCALE";		public static var ANIMATION_VISIBLE:String = "SoundBar.ANIMATION_VISIBLE";				// Constructor.		public function SoundBar()		{						super();			timeline = new TimelineMax;			var tweens:Array = [];						for( var i:uint = 0; i < _total; i++ )			{								_clips.push( new Square );								var c:Sprite = _clips[ i ] as Sprite;				c.x = 0;				c.y = _spacing * i * -1;								var t:TimelineMax = new TimelineMax;				tweens.push( t );								c.scaleX = c.scaleY = 0;				t.append( new TweenMax( c, 0, { scaleX:0, scaleY:0 } ) );				t.append( new TweenMax( c, 1, { scaleX:1, scaleY:1 } ) );								addChild( c );							}						// Apply to timeline.			timeline.appendMultiple( tweens, 0, "start", 0.05 );			timeline.pause( 0 );			timeline.progress( 0.1 );					}						// Progress.		public function get progress():Number		{						return timeline.progress as Number;					}				public function set progress(num:Number):void		{						timeline.progress( num );					}				// Progress.		public function get spacing():uint		{						return _spacing;					}				public function set spacing(num:uint):void		{						//trace("spacing : " + num);			_spacing = num;			for( var i:uint = 0; i < _clips.length; i++ )			{								var c:Sprite = _clips[ i ] as Sprite;				c.y = _spacing * i * -1;							}					}					}	}